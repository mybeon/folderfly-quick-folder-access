{
    "name": "quick-open-folder",
    "displayName": "Quick Open Folder",
    "description": "Simplify project navigation in Visual Studio Code.",
    "repository": {
        "type": "git",
        "url": "https://github.com/mybeon/vscode-quick-open-folder.git"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "l10n": "./locales/",
    "contributes": {
        "configuration": {
            "title": "Quick Open Folder",
            "properties": {
                "quickOpenFolder.required.folderPath": {
                    "title": "%quickOpenFolder.required.folderPath.title%",
                    "type": "string",
                    "description": "%quickOpenFolder.required.folderPath.description%",
                    "scope": "machine"
                }
            }
        },
        "commands": [
            {
                "command": "quick-open-folder.quickOpenFolder",
                "title": "Quick Open Folder",
                "category": "Folder"
            }
        ]
    },
    "scripts": {
        "vscode:package": "vsce package --no-dependencies",
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.83.0",
        "@types/mocha": "^10.0.2",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "@vscode/test-electron": "^2.3.4"
    }
}
